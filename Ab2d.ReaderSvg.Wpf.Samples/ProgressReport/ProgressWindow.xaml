<Window x:Class="Ab2d.Samples.ReaderSvgSamples.ProgressReport.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress" 
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
    Topmost="True" 
    ResizeMode="NoResize"
    Height="100" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="StatusTextBlock" Text="Reading metafile..." Margin="0 3"/>
            <ProgressBar Name="ProgressBar1" Width="250" Height="20" Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>
    </Grid>
</Window>
